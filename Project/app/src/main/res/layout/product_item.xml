<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="181dp"
        android:layout_height="242dp">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="192dp"
            android:layout_height="148dp"
            android:layout_margin="5dp"
            android:background="#0000"
            android:padding="1dp"
            android:src="@drawable/shirt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageButton
            android:id="@+id/add_to_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:adjustViewBounds="true"

            android:background="#0000"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/heart_wishlist_empty"

            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.036">

        </ImageButton>

        <TextView
            android:id="@+id/price_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q 10.99"
            android:textColor="@color/red"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="216dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/price_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q 10.99"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="216dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/price_next_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q 20.99"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="216dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/product_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:singleLine="true"
            android:text="Item name eeeeeeeeeeeeeeeeeeeeee"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="162dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Item name eeeeeeeeeeeeeeeeeeeeee"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="184dp"
            tools:ignore="MissingConstraints">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



